    </footer>

    <script>
        let currentStep = 0;
        const steps = document.querySelectorAll('.course-step');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const totalSteps = steps.length;

        function showStep(stepIndex) {
            steps.forEach((step, index) => {
                if (index === stepIndex) {
                    step.classList.add('active');
                } else {
                    step.classList.remove('active');
                }
            });
            updateButtonStates();
            window.scrollTo(0, 0); // Scroll al inicio de la p√°gina al cambiar de paso
        }

        function nextStep() {
            if (currentStep < totalSteps - 1) {
                currentStep++;
                showStep(currentStep);
            }
        }

        function prevStep() {
            if (currentStep > 0) {
                currentStep--;
                showStep(currentStep);
            }
        }

        function updateButtonStates() {
            if (currentStep === 0) {
                prevBtn.disabled = true;
            } else {
                prevBtn.disabled = false;
            }

            if (currentStep === totalSteps - 1) {
                nextBtn.textContent = 'Finalizar Curso'; // O simplemente deshabilitar
                 // nextBtn.disabled = true; // Opcional: deshabilitar al final
            } else {
                nextBtn.textContent = 'Siguiente';
                nextBtn.disabled = false;
            }
        }

        // Initialize
        showStep(currentStep);
    </script>

</body>
</html>
